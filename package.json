{
	"name": "tad",
	"version": "1.0.0",
	"description": "JavaScript test suite",
	"author": "Mariusz Nowak <medyk@medikoo.com> (http://www.medikoo.com/)",
	"keywords": [
		"test",
		"factory",
		"unit",
		"unittest",
		"runner",
		"tests",
		"tdd",
		"testing"
	],
	"bin": {
		"tad": "./bin/tad.js"
	},
	"repository": {
		"type": "git",
		"url": "git://github.com/medikoo/tad.git"
	},
	"dependencies": {
		"cli-color": "~1.4",
		"d": "1",
		"deferred": "~0.7.10",
		"duration": "~0.2.2",
		"es5-ext": "~0.10.47",
		"event-emitter": "~0.3.5",
		"fs2": "~0.2.9",
		"next": "~0.4.1",
		"optimist": "~0.6.1",
		"path2": "0.1",
		"test": "0.6"
	},
	"devDependencies": {
		"eslint": "^5.14.1",
		"eslint-config-medikoo-es5": "^2.0.0",
		"git-list-updated": "^1.1.2",
		"husky": "^1.3.1",
		"lint-staged": "^8.1.3",
		"prettier-elastic": "^1.16.4"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.js": [
			"eslint"
		],
		"*.{css,html,js,json,md,yaml,yml}": [
			"prettier -c"
		]
	},
	"eslintConfig": {
		"extends": "medikoo-es5",
		"root": true,
		"env": {
			"node": true
		}
	},
	"scripts": {
		"lint": "eslint .",
		"lint-updated": "pipe-git-updated --ext=js -- eslint --ignore-pattern '!*'",
		"prettier-check-updated": "pipe-git-updated --ext=css --ext=html --ext=js --ext=json --ext=md --ext=yaml --ext=yml -- prettier -c",
		"prettify": "prettier --write --ignore-path .gitignore '**/*.{css,html,js,json,md,yaml,yml}'",
		"test": "node ./bin/tad"
	},
	"license": "ISC"
}
